regions[nav_top]        = 'Navigation Top'
regions[navigation]     = 'Navigation'
regions[nav_bottom]     = 'Navigation Bottom'
regions[content_top]    = 'Content Top'
regions[highlighted]    = 'Highlighted'
regions[content]        = 'Content'
