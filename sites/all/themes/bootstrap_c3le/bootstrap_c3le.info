name = c3le on Bootstrap
description = A Bootstrap Sub-theme customized for c3le.ch
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

; regions[navigation]     = 'Navigation'
